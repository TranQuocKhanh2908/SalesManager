<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:id="@+id/Detail_bill"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_marginBottom="10dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginRight="20dp"
            android:layout_marginLeft="60dp">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/bg_card_list_product"
                android:alpha="0.5"
                app:tint="#77000000" />

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginBottom="2dp"
                android:layout_marginRight="2dp"
                android:src="@drawable/bg_card_list_bill"/>

        </RelativeLayout>

        <ImageView
            android:id="@+id/img_Bill"
            android:layout_width="120dp"
            android:layout_height="match_parent"
            android:src="@drawable/image_test"
            android:padding="15dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_marginLeft="120dp">

            <TextView
                android:id="@+id/Txv_NameBill"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:text="Tên Sản Phẩm"
                android:textSize="17sp"
                android:gravity="bottom"
                android:fontFamily="@font/muli_black"
                android:textAllCaps="true"
                android:paddingBottom="1dp"
                android:textColor="#000" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="25dp"
                android:layout_marginTop="5dp"
                android:orientation="horizontal">

                    <TextView
                        android:id="@+id/lb_CreateDay"
                        android:layout_width="match_parent"
                        android:layout_height="25dp"
                        android:text="Ngày Lập Hóa Đơn: "
                        android:textSize="15sp"
                        android:textColor="#A6A6A6"/>

                    <TextView
                        android:id="@+id/Txv_CreateDay"
                        android:layout_width="match_parent"
                        android:layout_height="25dp"
                        android:text="Ngày Lập Hóa Đơn"
                        android:fontFamily="@font/muli_black"
                        android:textSize="15sp"
                        android:textColor="@color/black"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="25dp"
                android:layout_marginTop="5dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/lb_Quality"
                    android:layout_width="match_parent"
                    android:layout_height="25dp"
                    android:text="Số Lượng: "
                    android:textSize="15sp"
                    android:textColor="#A6A6A6"/>

                <TextView
                    android:id="@+id/Txv_Quality"
                    android:layout_width="match_parent"
                    android:layout_height="25dp"
                    android:text="Số lượng"
                    android:fontFamily="@font/muli_black"
                    android:textSize="15sp"
                    android:textColor="@color/black"/>

            </LinearLayout>

        </LinearLayout>

    </RelativeLayout>

</RelativeLayout>