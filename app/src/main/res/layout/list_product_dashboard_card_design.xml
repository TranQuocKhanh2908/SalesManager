<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="160dp"
    android:layout_height="280dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/tools"
    app:cardCornerRadius="10dp"
    app:cardElevation="8dp"
    card_view:cardUseCompatPadding="true">

    <LinearLayout
        android:id="@+id/detail_product_dashboard"
        android:layout_width="160dp"
        android:layout_height="280dp"
        android:padding="10dp"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/product_image_dashboard"
            android:layout_width="match_parent"
            android:layout_height="140dp"
            android:src="@drawable/ls_startupimage"
            android:scaleType="centerInside"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tên Sản Phẩm:"
            android:fontFamily="@font/muli_black"
            android:textSize="15sp"
            android:layout_marginTop="5dp"/>

        <TextView
            android:id="@+id/Product_Name_dashboard"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="McDonald's"
            android:textSize="18sp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:textSize="15dp"
            android:fontFamily="@font/muli_black"
            android:text="Số Lượng:"/>

        <TextView
            android:id="@+id/Product_Quality_dashboard"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="15dp"
            android:text="Lorem ipsum dolor sit amet, consectetuer adipiscing elit."/>

    </LinearLayout>

</androidx.cardview.widget.CardView>