<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".User.MShopping.ListPromotion.DetailPromotion"
    android:orientation="vertical"
    android:background="@color/mainColor">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="10dp">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/detail_promotion_toolBar"
            android:layout_width="match_parent"
            android:layout_height="?actionBarSize">

            <ImageView
                android:id="@+id/back_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_baseline_arrow_back_24"
                android:layout_centerVertical="true"
                android:padding="15dp"/>

        </androidx.appcompat.widget.Toolbar>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="?actionBarSize">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Chi Tiết Khuyến Mãi"
                android:textStyle="bold"
                android:textSize="25sp"
                android:padding="10dp"
                android:textAllCaps="true"/>

        </RelativeLayout>

    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/bg_list_promotion"
        android:padding="10dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="20dp"
            android:padding="10dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp">

                <TextView
                    android:id="@+id/lb_typepromotion"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Loại Sản Phẩm :"
                    android:layout_centerHorizontal="true"
                    android:layout_marginBottom="10dp"/>

                <TextView
                    android:id="@+id/detail_promotion_typeProduct"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Loại Sản Phẩm"
                    android:textSize="20sp"
                    android:layout_below="@id/lb_typepromotion"
                    android:layout_centerHorizontal="true"/>

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="10dp">

                <TextView
                    android:id="@+id/lb_namepromotion"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Tên Sản Phẩm :"
                    android:layout_centerHorizontal="true"
                    android:layout_marginBottom="10dp"/>

                <TextView
                    android:id="@+id/detail_promotion_nameProduct"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Tên sản phẩm"
                    android:textSize="20sp"
                    android:layout_below="@id/lb_namepromotion"
                    android:layout_centerHorizontal="true"/>

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="10dp">

                <TextView
                    android:id="@+id/lb_priceproduct"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Giá Sản Phẩm Chưa Giảm (VNĐ) x 1000 :"
                    android:layout_centerHorizontal="true"
                    android:layout_marginBottom="10dp"/>

                <TextView
                    android:id="@+id/detail_promotion_priceBefore"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Giá Sản Phẩm Chưa Giảm"
                    android:textSize="20sp"
                    android:layout_below="@id/lb_priceproduct"
                    android:layout_centerHorizontal="true"/>

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="10dp">

                <TextView
                    android:id="@+id/lb_percentpromotion"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Phần Trăm Giảm :"
                    android:layout_centerHorizontal="true"
                    android:layout_marginBottom="10dp"/>

                <TextView
                    android:id="@+id/detail_promotion_percent"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Phần Trăm Giảm"
                    android:textSize="20sp"
                    android:layout_below="@id/lb_percentpromotion"
                    android:layout_centerHorizontal="true"/>

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="10dp">

                <TextView
                    android:id="@+id/lb_priceafter"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Giá Sản Phẩm Sau Khi Giảm (VNĐ) x 1000 :"
                    android:layout_centerHorizontal="true"
                    android:layout_marginBottom="10dp"/>

                <TextView
                    android:id="@+id/detail_promotion_priceAfter"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Giá Sản Phẩm Sau Khi Giảm"
                    android:textSize="20sp"
                    android:layout_below="@id/lb_priceafter"
                    android:layout_centerHorizontal="true"/>

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="10dp">

                <TextView
                    android:id="@+id/lb_startday"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Ngày Bắt Đầu Giảm :"
                    android:layout_centerHorizontal="true"
                    android:layout_marginBottom="10dp"/>

                <TextView
                    android:id="@+id/detail_promotion_startDay"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Ngày Bắt Đầu Giảm:"
                    android:textSize="20sp"
                    android:layout_below="@id/lb_startday"
                    android:layout_centerHorizontal="true"/>

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="10dp">

                <TextView
                    android:id="@+id/lb_endday"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Ngày Kết Thúc Giảm :"
                    android:layout_centerHorizontal="true"
                    android:layout_marginBottom="10dp"/>

                <TextView
                    android:id="@+id/detail_promotion_endDay"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Ngày Kết Thúc Giảm"
                    android:textSize="20sp"
                    android:layout_below="@id/lb_endday"
                    android:layout_centerHorizontal="true"/>

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="10dp">

                <TextView
                    android:id="@+id/lb_imagesp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Hình Ảnh Sản Phẩm :"
                    android:layout_centerHorizontal="true"
                    android:layout_marginBottom="10dp"/>

                <ImageView
                    android:id="@+id/detail_promotion_imageProduct"
                    android:layout_width="match_parent"
                    android:layout_height="300dp"
                    android:src="@drawable/image_test"
                    android:layout_below="@id/lb_imagesp"
                    android:layout_centerHorizontal="true"/>

            </RelativeLayout>


        </LinearLayout>

    </ScrollView>

</LinearLayout>